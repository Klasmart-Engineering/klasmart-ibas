name: cd

on:
  push:
    branches:
      - add-github-action
  pull_request:
    branches:
      - add-github-action

jobs:
  cd:
    runs-on: self-hosted

    steps:
      - uses: actions/checkout@add-github-action

      - name: Deploy Using ssh
        uses: evik.santika/ssh-action@master
        with:
          host: ${{ secrets.SSH_HOST }}
          username: ${{ secrets.SSH_USERNAME }}
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          port: 22
          script: |
            cd ~/kidsloop-ibas/kidsloop_indonesia_b2c_automation
            git pull origin add-github-action
            git status