name: cd

on:
  push:
    branches:
      - add-github-action
  pull_request:
    branches:
      - add-github-action

jobs:
  cd:
    runs-on: self-hosted

    steps:
      - uses: actions/checkout@v3

      - name: Deploy Using runner hosted
        run: |
          cd ~/kidsloop-ibas/kidsloop_indonesia_b2c_automation
          git pull origin add-github-action
          git status
          docker-compose -f local.yml up -d --build